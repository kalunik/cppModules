CC		=	c++
RM		=	rm -f
CFLAGS	=	-I. -std=c++98 -Wall -Wextra -Werror
NAME	=	PhoneBook
SRCS	=	main.cpp Contact.cpp PhoneBook.cpp

OBJS	=	$(patsubst %.cpp, %.o, $(SRCS))

all:
			@$(MAKE) $(NAME)

$(NAME):	$(OBJS)
			@$(CC) -o $(NAME) $(OBJS)
			@echo "PhoneBook is ready to use âœ… "

%.o: %.c	Makefile
			@$(CC) $(CFLAGS) -c $< -o $@

clean:
			@$(RM)	$(OBJS)
			@echo ".o Deleted ðŸ—¿"

fclean: 	clean
			@$(RM)	 $(NAME)
			@echo "Deleted ðŸ˜¬"

re:			fclean all

run:		all
			./$(NAME)

.PHONY: all bonus clean fclean re run